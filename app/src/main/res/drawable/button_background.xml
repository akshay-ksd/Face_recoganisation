<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the background color to white -->
            <corners android:radius="8dp" /> <!-- Set the border radius (adjust the value as needed) -->
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Set the shadow color -->
        </shape>
    </item>
</layer-list>